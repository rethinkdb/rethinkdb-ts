{
  "name": "rethinkdb-ts",
  "version": "3.0.0-next.0",
  "description": "RethinkDB TypeScript driver",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "maintainers": [
    "Ron Zeidman",
    {
      "email": "atassikay38@gmail.com",
      "name": "Taymuraz Kaytmazov",
      "url": "https://github.com/atassis"
    }
  ],
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=12.x <=18.x"
  },
  "scripts": {
    "prepare": "husky install && tsc -p tsconfig.build.json",
    "build": "tsc -p tsconfig.build.json",
    "build:dev": "tsc --watch",
    "lint": "eslint src",
    "test": "./scripts/ts-mocha --check-leaks -t 10000 --exit ./test/*.ts",
    "proto": "pbjs -t static-module -w commonjs -o src/proto/ql2.js src/proto/ql2.proto && pbts -o src/proto/ql2.d.ts src/proto/ql2.js && ts-node ./generate-enums",
    "release:dev": "ts-node scripts/configure-prerelease.ts next ./package.json",
    "test": "ts-mocha --check-leaks -t 10000 --exit ./test/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rethinkdb/rethinkdb-ts.git"
  },
  "author": "Ron Zeidman",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/rethinkdb/rethinkdb-ts/issues"
  },
  "homepage": "https://github.com/rethinkdb/rethinkdb-ts#readme",
  "devDependencies": {
    "@types/mocha": "^8.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "mocha": "^9.2.2",
    "prettier": "^2.7.1",
    "protobufjs": "^6.11.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
